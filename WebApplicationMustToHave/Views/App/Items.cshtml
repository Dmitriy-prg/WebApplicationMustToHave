@using WebApplicationMustToHave.Models;
@model IEnumerable<IViewable>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Что интересного</title>
    <style>
        td {
        padding: 5px;
        }

        button {
        margin: 5px;
        }
    </style>
</head>
<body>
    <h2>Список произведений</h2>
    <div>
        <input type="hidden" id="Id" />
        <p>
            <a asp-action="CreateFilm">Добавить фильм</a>
            <a asp-controller="Person" asp-action="Create">Добавить персону</a>
            <button id="addBtn" action="App/Film">Добавить</button>
            <button id="updateBtn" action="index.html">Отправить</button>
        </p>
    </div>
    <form method="post">
        <p>
            <input type="submit" value="Редактировать" />
        </p>
        <p>
            <label for="compositions">Выберите произведение для редактирования:</label><br />
            <select multiple name="compositions">
                @foreach (var f in Model)
                {
                    <option value=@f.Id>@f.View</option>
                }
            </select>
        </p>
    </form>
    <table>
        <thead><tr><th>Описание</th></tr></thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr><td>@f.View</td>></tr>
            }
        </tbody>
    </table>
</body>
</html>
